<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.RecordDetailActivity">

    <include layout="@layout/header_bar"/>

    <LinearLayout
        android:id="@+id/cs_amount_big_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_50"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/textSize_40" />

        <TextView
            android:id="@+id/ard_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20.0"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/textSize_80" />
    </LinearLayout>

    <TextView
        android:id="@+id/ard_success_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="交易成功"
        android:textColor="@color/icon"
        android:textSize="@dimen/textSize_26" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_50"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_20"
            android:paddingBottom="@dimen/padding_20"
            android:paddingLeft="@dimen/padding_40"
            android:paddingRight="@dimen/padding_40"
            android:layout_marginBottom="@dimen/margin_10"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textColor="@color/icon"
                android:textSize="@dimen/textSize_26" />

            <TextView
                android:id="@+id/ard_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="沈程阳"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/textSize_26" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_20"
            android:paddingBottom="@dimen/padding_20"
            android:paddingLeft="@dimen/padding_40"
            android:paddingRight="@dimen/padding_40"
            android:layout_marginBottom="@dimen/margin_10"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卡编号"
                android:textColor="@color/icon"
                android:textSize="@dimen/textSize_26" />

            <TextView
                android:id="@+id/ard_cardnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="22"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/textSize_28" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/paycount_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_20"
            android:paddingBottom="@dimen/padding_20"
            android:paddingLeft="@dimen/padding_40"
            android:paddingRight="@dimen/padding_40"
            android:layout_marginBottom="@dimen/margin_10"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消费次数"
                android:textColor="@color/icon"
                android:textSize="@dimen/textSize_26" />

            <TextView
                android:id="@+id/ard_paycount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="161"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/textSize_28" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_20"
            android:paddingBottom="@dimen/padding_20"
            android:paddingLeft="@dimen/padding_40"
            android:paddingRight="@dimen/padding_40"
            android:layout_marginBottom="@dimen/margin_10"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余额"
                android:textColor="@color/icon"
                android:textSize="@dimen/textSize_26" />

            <TextView
                android:id="@+id/ard_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="8848"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/textSize_28" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pattern_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_20"
            android:paddingBottom="@dimen/padding_20"
            android:paddingLeft="@dimen/padding_40"
            android:paddingRight="@dimen/padding_40"
            android:layout_marginBottom="@dimen/margin_10"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易模式"
                android:textColor="@color/icon"
                android:textSize="@dimen/textSize_26" />

            <TextView
                android:id="@+id/ard_pattern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="自动扣费"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/textSize_28" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_20"
            android:paddingBottom="@dimen/padding_20"
            android:paddingLeft="@dimen/padding_40"
            android:paddingRight="@dimen/padding_40"
            android:layout_marginBottom="@dimen/margin_10"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间"
                android:textColor="@color/icon"
                android:textSize="@dimen/textSize_26" />

            <TextView
                android:id="@+id/ard_TradeDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2019-08-22 15:42:15"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/textSize_28" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>