<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.PersonalSettingActivity"
    android:background="@color/color_fafafa"
    android:orientation="vertical">

    <include layout="@layout/header_bar" />

    <RelativeLayout
        android:id="@+id/aps_rl1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_100"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="@dimen/margin_40">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_30"
            android:layout_centerVertical="true"
            android:text="关于"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/textSize_26"
            />

        <ImageView
            android:layout_width="@dimen/width_40"
            android:layout_height="@dimen/height_40"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_20"
            android:src="@mipmap/youjiantou"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"/>
    <RelativeLayout
        android:id="@+id/aps_rl2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_100"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_30"
            android:layout_centerVertical="true"
            android:text="清除缓存"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/textSize_26"
            />

        <TextView
            android:id="@+id/cache_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_100"
            android:text="0.00"
            android:textColor="@color/icon"
            android:textSize="@dimen/textSize_26"
            />

        <ImageView
            android:layout_width="@dimen/width_40"
            android:layout_height="@dimen/height_40"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_20"
            android:src="@mipmap/youjiantou"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"/>
    <RelativeLayout
        android:id="@+id/aps_rl3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_100"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_30"
            android:layout_centerVertical="true"
            android:text="切换账号"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/textSize_26"
            />

        <ImageView
            android:layout_width="@dimen/width_40"
            android:layout_height="@dimen/height_40"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_20"
            android:src="@mipmap/youjiantou"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"/>
    <RelativeLayout
        android:id="@+id/aps_rl4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_100"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_30"
            android:layout_centerVertical="true"
            android:text="退出登录"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/textSize_26"
            />

        <ImageView
            android:layout_width="@dimen/width_40"
            android:layout_height="@dimen/height_40"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_20"
            android:src="@mipmap/youjiantou"/>
    </RelativeLayout>
</LinearLayout>