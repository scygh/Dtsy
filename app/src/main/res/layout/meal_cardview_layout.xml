<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/radius_10"
    app:cardElevation="8dp">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_20"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/meal_icon"
                android:layout_width="@dimen/width_50"
                android:layout_height="@dimen/height_50"
                android:src="@mipmap/zaocan" />

            <TextView
                android:id="@+id/meal_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_20"
                android:layout_toRightOf="@+id/meal_icon"
                android:text="早餐"
                android:textSize="@dimen/textSize_30"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/meal_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:text="请识别人脸"
            android:textSize="@dimen/textSize_40"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_toRightOf="@+id/meal_price"
            android:text="元"
            android:textSize="@dimen/textSize_26"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_80"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/ll_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="首单优惠 "
                    android:textSize="@dimen/textSize_24" />

                <TextView
                    android:id="@+id/meal_PreferentialAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10元"
                    android:textSize="@dimen/textSize_24"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="限额 "
                    android:textSize="@dimen/textSize_24" />

                <TextView
                    android:id="@+id/meal_MealQuota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10元"
                    android:textSize="@dimen/textSize_24"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="仅限 "
                    android:textSize="@dimen/textSize_24" />

                <TextView
                    android:id="@+id/meal_MealTimes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1次"
                    android:textSize="@dimen/textSize_24"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_20"
            android:gravity="center">

            <TextView
                android:id="@+id/meal_startTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6:00"
                android:textSize="@dimen/textSize_26" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="@dimen/textSize_26" />

            <TextView
                android:id="@+id/meal_endTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9:00"
                android:textSize="@dimen/textSize_26" />
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
